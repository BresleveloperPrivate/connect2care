{
  "name": "CustomUser",
  "pathLink": "CustomUsers",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "crud": {
    "metaFunctions": {},
    "fields": {
      "id": {},
      "username": {
        "title": "user name"
      },
      "email": {
        "title": "email"
      },
      "emailVerified": {
        "type": "Number",
        "editable": "true"
      },
      "mainImageId": {
        "formatter": "related-pattern",
        "pattern": "image",
        "title": "image"
      },
      "published": {
        "type": "datetimePicker",
        "width": "160"
      }
    }
  },
  "properties": {
    "mainImageId": "number"
  },
  "validations": [],

  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "mainImage": {
      "type": "belongsTo",
      "model": "Images",
      "foreignKey": "mainImageId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "extendedLogin"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "authenticate"
    }
  ],
  "methods": {}
}
